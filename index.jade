//output:index.html

doctype
html
	title 5adiyah
	link(rel="stylesheet", href="css/normalize.css")
	link(rel="stylesheet", href="css/skeleton.css")
	link(rel="stylesheet", href="css/styles.css")
	link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,300' rel="stylesheet" type="text/css")
	script(src="jquery-1.12.0.js")
	script(src="scripts.js")
	body

		.container
			.container
				.header
				.title
					h2.center Mad Libs
					p.center PRACTICING WITH FORMS
					
		.whitebox
			.subtitle
				p.strong Fill in the blanks to write your story!
			#blanks
				form
					.form-group
						label(for="person1",) A name
						input(id="person1", class="form-control", type="text")
					.form-group
						label(for="position",) Position
						input(id="position", class="form-control", type="text")
					.form-group
						label(for="animal",) An Animal
						input(id="animal", class="form-control", type="text")
					.form-group
						label(for="crime",) A Crime
						input(id="crime", class="form-control", type="text")
					.form-group
						label(for="verb",) A verb ending with -ing
						input(id="verb", class="form-control", type="text")
					.form-group
						label(for="noun",) A singular noun
						input(id="noun", class="form-control", type="text")
					.form-group
						label(for="fluid",) A fluid
						input(id="fluid", class="form-control", type="text")
					.form-group
						label(for="number",) A number
						input(id="number", class="form-control", type="text")
					.form-group
						label(for="animal2",) Another animal
						input(id="animal2", class="form-control", type="text")
					button(type="submit", class="btn") Show me the story!
			
			#story
				p.strong An Adventure:
				p BREAKING NEWS! #[span.person1] who plays #[span.position] for the #[span.animal] was arrested last night for #[span.crime]. Officials say he had been #[span.verb] and was armed with a #[span.noun] and there was a lot of #[span.fluid] everywhere at the scene of the crime. #[span.person1] has been suspended for #[span.number] games for acting like such a stupid #[span.animal2]. 
					
